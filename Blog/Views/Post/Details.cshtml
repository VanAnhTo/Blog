@model Blog.Models.UserCreatedPost

@{
    ViewBag.Title = "Details";
}

<div id="body" class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="group1 col-md-8">
                    <h2>@Model.Tittle</h2>
                    <span class="glyphicon glyphicon-user"></span> @Model.UserName &emsp;
                    <span class="glyphicon glyphicon-time"></span> @Model.CreatedDate.ToString("dd/MM/yyyy")
                </div>
            </div>
            <br />
            <p class="test">@Model.Content</p>

            <hr>                          

            <ul id="comments" class="comments">
                <li class="comment">
                    <div class="clearfix">
                        <h4 class="pull-left">@Model.UserCommet</h4>
                        <p class="pull-right">@Model.CommentDate</p>
                    </div>
                    <p>
                        <em>@Model.Comment</em>
                    </p>
                </li>
            </ul>

        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PostId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
