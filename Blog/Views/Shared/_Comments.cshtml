<ul id="comments" class="list-group comments">
    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="clearfix">
                <h4 class="pull-left">item.userId</h4>
                <p class="pull-right">item.CreatedDate.ToString("dd/MM/yyyy")</p>
            </div>
            <p>
                <em>item.content</em>
            </p>
        </li>
    }
</ul>


